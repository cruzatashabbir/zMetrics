@{
    Layout = "~/Views/Shared/_LayoutPage_Auth.cshtml";
}


<div class="panel-body">
    <h1 class="h3">Forgot password</h1>
    <p class="pad-btm">Enter your email address to recover your password. </p>
    <form action="/Authentication/ResetPassword" method="post" id="fpForm">
        <div class="form-group">
            <input type="text" name="Email" class="form-control" placeholder="Email">
        </div>
        <div class="form-group text-right">
            <button class="btn btn-danger btn-lg btn-block" type="submit">Reset Password</button>
        </div>
        <div class="form-group">
            <div id="demo-error-container" class="bg-gray-light"></div>
        </div>
    </form>
    <div class="pad-top">
        <a href="@Url.RouteUrl("login")" class="btn-link text-bold text-main">Back to Login</a>
    </div>
</div>
<div class="panel-footer">
    @if (ViewBag.Error_Msg != "")
    {
        <p style="color:red">@ViewBag.Error_Msg</p>
    }
</div>
